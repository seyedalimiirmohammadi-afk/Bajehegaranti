doc.setFontSize(11);
let y=30;
doc.text(`ูุงู ูุณุฆูู ุจุงุฌู: ${name}`,10,y); y+=10;
doc.text(`ฺฉุฏ ุจุงุฌู: ${code}`,10,y); y+=10;
doc.text(`ฺฉุฏ ูู: ${national}`,10,y); y+=10;
doc.text(`ุขุฏุฑุณ: ${address}`,10,y); y+=10;
