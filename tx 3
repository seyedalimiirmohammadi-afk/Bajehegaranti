const receipt=document.getElementById('receipt').value;
const photoFile=document.getElementById('devicePhoto').files[0];

if(!name||!code||!national||!address||!phone||!receipt||!photoFile){alert("ุชูุงู ููุฏูุง ู ุนฺฉุณ ุฏุณุชฺฏุงู ุฑุง ูพุฑ ฺฉูุฏ.");return;}

const reader=new FileReader();
reader.onload=function(e){
doc.setFont("Tahoma");
doc.setFontSize(12);
doc.text("ุดุฑฺฉุช ูู ู ูููุฏุณ ุตูุนุช ูุงุฑูุง",105,10,null,null,"center");
